{
  "manifest_version": 3,
  "name": "Overlay Extension",
  "version": "1.0",
  "description": "An extension with a glowing bar and overlays.",
  "permissions": ["storage", "activeTab", "tabs"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "commands": {
    "toggle-bar": {
      "suggested_key": {
        "default": "Ctrl+;",
        "mac": "Command+;"
      },
      "description": "Toggle the glowing bar"
    },
    "toggle-back": {
      "suggested_key": {
        "default": "Ctrl+;",
        "mac": "Command+;"
      },
      "description": "Return to original state"
    }
  }
}
